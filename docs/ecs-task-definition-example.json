{
  "family": "customer-support-production",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "api",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/customer-support-multiagent:production-latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "API_HOST",
          "value": "0.0.0.0"
        },
        {
          "name": "API_PORT",
          "value": "8000"
        },
        {
          "name": "API_RELOAD",
          "value": "False"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        },
        {
          "name": "ENVIRONMENT",
          "value": "production"
        },
        {
          "name": "SMTP_HOST",
          "value": "smtp.gmail.com"
        },
        {
          "name": "SMTP_PORT",
          "value": "587"
        },
        {
          "name": "SMTP_USE_TLS",
          "value": "True"
        },
        {
          "name": "OPENAI_MODEL",
          "value": "gpt-3.5-turbo"
        },
        {
          "name": "JWT_ALGORITHM",
          "value": "HS256"
        },
        {
          "name": "JWT_EXPIRATION_HOURS",
          "value": "24"
        },
        {
          "name": "ESCALATION_MAX_INTERACTIONS",
          "value": "2"
        },
        {
          "name": "ESCALATION_MIN_CONFIDENCE",
          "value": "0.6"
        },
        {
          "name": "ESCALATION_MIN_SENTIMENT",
          "value": "-0.7"
        },
        {
          "name": "ESCALATION_SLA_HOURS",
          "value": "4"
        },
        {
          "name": "CORS_ALLOWED_ORIGINS",
          "value": "https://dashboard.yourdomain.com"
        }
      ],
      "secrets": [
        {
          "name": "MONGODB_URI",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:customer-support/production/mongodb-uri"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:customer-support/production/openai-key"
        },
        {
          "name": "JWT_SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:customer-support/production/jwt-secret"
        },
        {
          "name": "TELEGRAM_BOT_TOKEN",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:customer-support/production/telegram-token"
        },
        {
          "name": "SMTP_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:customer-support/production/smtp-password"
        },
        {
          "name": "SMTP_USERNAME",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:customer-support/production/smtp-username"
        },
        {
          "name": "SMTP_FROM",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:customer-support/production/smtp-from"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/customer-support-production",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "api",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ],
  "tags": [
    {
      "key": "Environment",
      "value": "production"
    },
    {
      "key": "Application",
      "value": "customer-support-multiagent"
    },
    {
      "key": "ManagedBy",
      "value": "deploy_ecs.py"
    }
  ]
}
