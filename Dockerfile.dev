# ============================================================
# Development Dockerfile for Customer Support MultiAgent
# ============================================================
# Optimized for development with:
# - Single-stage build (faster rebuilds)
# - Hot-reload support via watchdog
# - Debug tools (curl, netcat, vim)
# - Mountable volumes for live code editing
# ============================================================

FROM python:3.10-slim

# Metadata
LABEL maintainer="customer-support-team"
LABEL version="1.0.0-dev"
LABEL description="MultiAgent Customer Support System - Development Image"

# Set working directory
WORKDIR /app

# Install system dependencies for development and debugging
RUN apt-get update && apt-get install -y \
    curl \
    netcat-openbsd \
    vim \
    git \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir watchfiles

# Create necessary directories
RUN mkdir -p /app/chroma_db /app/logs /app/scripts

# Set environment variables for development
ENV PATH="/app:$PATH" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    API_RELOAD=True

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/api/health || exit 1

# Default command: Run FastAPI with uvicorn and hot-reload
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
