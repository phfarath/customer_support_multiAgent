# ============================================================
# Docker Environment Variables for Customer Support System
# ============================================================
# Copy this file to .env and fill in your actual values
# ============================================================

# -------------------- MongoDB Configuration --------------------
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme_in_production
MONGO_PORT=27017
DATABASE_NAME=customer_support_esc

# -------------------- OpenAI Configuration --------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# -------------------- Telegram Configuration --------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# -------------------- SMTP Configuration --------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_gmail_address@gmail.com
SMTP_PASSWORD=your_gmail_app_password
SMTP_FROM=your_gmail_address@gmail.com
SMTP_USE_TLS=True

# -------------------- Escalation Configuration --------------------
ESCALATION_DEFAULT_EMAIL=human_agent@yourcompany.com
ESCALATION_HANDOFF_MESSAGE=Sua solicitacao foi encaminhada para um atendente humano. Ticket: {ticket_id}. Em breve responderemos por aqui.
ESCALATION_MAX_INTERACTIONS=2
ESCALATION_MIN_CONFIDENCE=0.6
ESCALATION_MIN_SENTIMENT=-0.7
ESCALATION_SLA_HOURS=4

# -------------------- API Configuration --------------------
API_PORT=8000
API_RELOAD=False
DASHBOARD_PORT=8501

# -------------------- JWT Configuration --------------------
JWT_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_TO_A_LONG_RANDOM_STRING_MIN_32_CHARS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# -------------------- CORS Configuration --------------------
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:8501,http://dashboard:8501,http://localhost:3000

# -------------------- Logging --------------------
LOG_LEVEL=INFO

# -------------------- Sentry (Optional - for production monitoring) --------------------
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=1.0
